    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ListView fx:id="listOfNames" onContextMenuRequested="#removeName" prefHeight="200.0" prefWidth="200.0" />

    <Label fx:id="welcomeText" />
   <TextField fx:id="name" />
    <Button onAction="#onHelloButtonClick" onMouseClicked="#removeName" text="Remove" />
   <Button layoutX="183.0" layoutY="317.0" onAction="#onHelloButtonClick" onMouseClicked="#addName" text="Add" />
</VBox>
